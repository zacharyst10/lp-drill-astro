---
import Layout from "../layouts/Layout.astro";
interface Props {
  day: number;
  month: string;
  title: string;
  description: string;
}

const { day, month, title, description } = Astro.props;
---

<div
  class="flex flex-wrap justify-start lg:justify-center items-center py-10 max-w-7xl"
>
  <div class="text-center min-w-[160px] sm:min-w-0 sm:w-1/3">
    <div class="sm:px-5 text-5xl text-gray-600">{day}</div>
    <div class="sm:px-5">{month}</div>
  </div>
  <div class="sm:px-5 px-10 pt-5 sm:pt-0 sm:w-2/3">
    <div class="text-2xl py-3 sm:pt-0 text-primaryDark">{title}</div>
    <div class="text-left">{description}</div>
  </div>
</div>
