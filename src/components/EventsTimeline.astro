---
import Layout from "../layouts/Layout.astro";
interface Props {
  day: number;
  month: string;
  title: string;
  description: string;
}

const { day, month, title, description } = Astro.props;
---

<div class="flex justify-start items-center mx-auto py-10 max-w-7xl">
  <div class="text-center min-w-[160px]">
    <div class="px-10 text-5xl text-gray-600">{day}</div>
    <div class="px-10">{month}</div>
  </div>
  <div class="px-12">
    <div class="text-2xl text-primaryDark">{title}</div>
    <div class="text-left">{description}</div>
  </div>
</div>
