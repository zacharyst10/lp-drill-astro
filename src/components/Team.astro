---
import { Image } from "astro:assets";
import emmaPaskett from "../assets/emma-paskett-headshot.jpg";
const teamMembers = [
  {
    image: emmaPaskett,
    name: "Bella LeBaron",
    role: "President",
    grade: "Senior",
  },
  {
    image: emmaPaskett,
    name: "Emma Paskett",
    role: "Co-Founder / CEO",
    grade: "Toronto, Canada",
  },
  {
    image: emmaPaskett,
    name: "Leslie Alexander",
    role: "Co-Founder / CEO",
    grade: "Toronto, Canada",
  },

  // Add more team members as needed...
];
---

<div class="bg-gray-100 py-24 sm:py-32">
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="mx-auto max-w-2xl lg:mx-0">
      <h2 class="text-3xl font-bold tracking-tight text-black sm:text-4xl">
        Meet the team
      </h2>
      <p class="mt-6 text-lg leading-8 text-black">
        We're a dynamic group of individuals who are passionate about what we do
        and dedicated to delivering the best results for our clients.
      </p>
    </div>
    <ul
      role="list"
      class="mx-auto mt-20 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-14 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3 xl:grid-cols-4"
    >
      {
        teamMembers.map((member) => (
          <li>
            <Image
              src={member.image}
              alt={member.name}
              class="aspect-[14/13] w-full rounded-2xl object-cover"
            />
            <h3 class="mt-6 text-lg font-semibold leading-8 tracking-tight text-black">
              {member.name}
            </h3>
            <p class="text-base leading-7 text-black">{member.role}</p>
            <p class="text-sm leading-6 text-black">{member.grade}</p>
          </li>
        ))
      }

      <!-- More people... -->
    </ul>
  </div>
</div>
